{
  "name": "server",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "tsx watch ./src/app.ts",
    "build": "rimraf ./build && tsc && tsc-alias",
    "start": "node ./build/app.js",
    "type-check": "tsc --noEmit",
    "init": "ts-patch install -s",
    "lint": "eslint --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push"
  },
  "devDependencies": {
    "@types/express": "5.0.0",
    "@types/node": "^22.13.4",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.4",
    "eslint-config-love": "118.0.0",
    "rimraf": "6.0.1",
    "ts-patch": "3.3.0",
    "tsc-alias": "1.8.10",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-transform-paths": "3.5.3"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "env-var": "^7.5.0",
    "express": "4.21.2",
    "pg": "^8.13.3"
  }
}
